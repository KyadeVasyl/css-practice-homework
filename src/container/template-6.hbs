
    <header class="header">
            <a href="#test">
                {{>logo}}
            </a>

            <nav class="header_nav">
                <div class="header_nav_right">
                    {{>nav list=header}}
                </div>
            </nav>
    </header>

        <section>
            <main class="main"> 
                {{#with info}}
                    <div class="hero">
                        <h1 class="hero_title">{{title}}</h1>
                        <p class="hero_text">{{description}}</p>
                    </div>
                {{/with}}
                {{#with form}}
                    <form class="form">
                        <h2 class="form_title">{{title}}</h2>
                        <div class="form_input_list">
                            {{#each inputs}}
                                <input type="{{type}}" placeholder="{{placeholder}}"  class="form_input"  name="{{name}}" id="form_input_{{id}}">
                            {{/each}}
                        </div>

                        <div class="form_checkbox">
                            
                        <input type="checkbox"  name="{{checkbox.name}}" id="{{checkbox.name}}">
                        <div></div>
                        <label for="{{checkbox.name}}">{{checkbox.label}}</label>
                        </div>
                        <button type="submit"  class="form_button">{{button}}</button>
                        <div class="form_line"></div>
                        <p class="form_info">{{info}}</p>
                    </form>
                {{/with}}
            </main>
        </section>
   
        <section>
            <div class="updates">
                {{#with updates}}
                    <h2 class="upd_title">{{title}}</h2>
                    {{#each list}}
                        <div id="upd_list">
                            <div class="upd_list">
                                <span class="upd_icon"></span>
                                <div class="upd_list_block">
                                    <strong class="upd_nicks">{{nickname}}</strong>
                                    <p class="upd_description">{{description}}</p>
                                </div>
                            </div>
                        </div>
                    {{/each}}

                    {{#with show_all}}
                        <a class="show_all"  href="{{url}}">{{text}}</a>
                    {{/with}}

                {{/with}}
            </div>
        </section>

        <section>
            <div class="expirience">
                {{#with expirience}}
                    <h3 class="expirience_title">{{title}}</h3>
                    <div class="expirience_badge">{{badge}}</div>
                    <div class="list_expirience">
                        {{#each list}}
                            <div class="list_card">
                                <strong class="card_name">{{name}}</strong>
                                <p class="card_details">{{details}}</p>
                            </div>
                        {{/each}}
                    </div>
                {{/with}}
            </div>
        </section>
    <footer class="footer">
        <div>
            {{>logo}}
        <span class="footer_copyright">Copyright 2023-2024</span> 
        </div>

        {{#each footer}}
            <div>
            <span class="footer_title">{{title}}</span> 
            {{>nav list=links isVertical=true}}
            </div>
        {{/each}}
    </footer>