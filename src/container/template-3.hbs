
    <header class="header">
            <div>
                {{>logo}}
            </div>

            <nav class="header_nav">
                <div class="header_nav_right">
                    {{>nav list=header}}
                </div>
            </nav>
    </header>

    <section>
        {{#with hero}}
            <div class="hero">
                <div class="hero_content">
                    <h1 class="hero_title">{{title}}</h1>
                    <p class="hero_text">{{text}}</p>
                </div>
                <img  alt="hero_image" class="hero_photo" src="{{photo}}">
            </div>
        {{/with}}
    </section>

    <section>
        <main class="blog">
            {{#each blog}}
                <div class="card">
                    <div class="card_img" style="background-image: url({{img}});"></div>
                    <h2 class="card_title">{{title}}</h2>
                    <p class="card_text">{{text}}</p>
                    <a href="{{href}}" class="card_button button">{{button}}</a>
                </div>
            {{/each}}
        </main>
    </section>

    <section>
        {{#with form}}
            <div class="form">
                <div class="form_content">
                    <h3 class="form_title">{{title}}</h3>
                    <p class="form_info">{{info}}</p>
                </div>
                <div class="form_action">
                    <a class="form_button button"  href="{{href}}">{{button}}</a>
                </div>
            </div>
        {{/with}}
    </section>
    <footer class="footer">
        <div>
            {{>logo}}
        <span class="footer_copyright">Copyright 2023-2024</span> 
        </div>

        {{#each footer}}
            <div>
            <span class="footer_title">{{title}}</span> 
            {{>nav list=links isVertical=true}}
            </div>
        {{/each}}
    </footer>